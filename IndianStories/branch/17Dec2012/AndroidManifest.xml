<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stories.puneet.indian.sex.stories"
    android:versionCode="3"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <!-- Adding privileges for AdVersions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme1" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StorySelectorActivity"
            android:label="StorySelector Activity" />
        <activity
            android:name=".StoryRedingActivity"
            android:label="StoryReding Activity" />

        <!-- AdMob Activity -->
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
       
       <!--  This is the Activity for MMedia Ad NetWork -->
        <activity
            android:name="com.millennialmedia.android.MMActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.millennialmedia.android.VideoPlayer"
            android:configChanges="keyboardHidden|orientation|keyboard" >
        </activity>

        <!-- This is the key for Adwhirl Ad Network. This will be helpfull in providing ad from all the networks -->
        <meta-data
            android:name="ADWHIRL_KEY"
            android:value="bf0cb7dabcef47cc864e673606054763" />
    </application>

</manifest>