<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
	    <!-- Database Connection setting -->
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
		<property name="hibernate.connection.username">fairdealadm</property>
		<property name="hibernate.connection.password">Utiba99</property>
		
		<!--  Oracle dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
		
		<property name="hibernate.default_schema">fairdealadm</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">create-drop</property>
		<property name="hibernate.archive.autodetection">true</property>
		<property name="show_sql">true</property>
		
		<!-- This is added to make sure Session are mapped to thread
		http://stackoverflow.com/questions/7281045/why-do-i-get-org-hibernate-hibernateexception-no-currentsessioncontext-configur -->
		<property name="hibernate.current_session_context_class">thread</property>
		
		<!-- Configuring the DBEntities -->
		<mapping class="com.fairdeal.core.entity.Agent"/>
		<mapping class="com.fairdeal.core.entity.AgentData"/>
		<mapping class="com.fairdeal.core.entity.AgentAuth"/>
	</session-factory>
</hibernate-configuration>
